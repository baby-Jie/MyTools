<Window x:Class="MyTools.Views.ProcessWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyTools.Views"
        mc:Ignorable="d"
        Title="ProcessWin" Height="300" Width="300">
    <StackPanel Background="Beige" Margin="10">
        <StackPanel Margin="10" Orientation="Horizontal">
            <TextBlock Text="Command:"></TextBlock>
            <TextBox Name="txtBoxCommand" Width="200"></TextBox>
        </StackPanel>

        <StackPanel Margin="10" Orientation="Horizontal">
            <TextBlock Text="Arguments:"></TextBlock>
            <TextBox Name="txtBoxArguments" Width="200"></TextBox>
        </StackPanel>
        <Button Content="一次性读完" Click="Button_Click" Margin="10" Width="100"></Button>
        <Button Content="分批次读"  Margin="10" Width="100" Click="Button_Click_1"></Button>
        <TextBox Name="txtBoxShowMessage" Margin="10" VerticalScrollBarVisibility="Auto" Height="100"></TextBox>
    </StackPanel>
</Window>
